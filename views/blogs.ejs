<!DOCTYPE html>
<html>
  <head>
    <title>POSTS</title>
    <link rel="stylesheet" type="text/css" href="/public/main.css" />
  </head>
  <body>
    <h1>VIEW POSTS</h1>
    <table>
      <tr>
        <th>Date</th>
        <th>Title</th>
        <th>Content</th>
        <th>User</th>
        <th>Topic</th>
      </tr>
      <% posts.forEach(function(post) { %>
      <tr>
        <td><%= post.post_date%></td>
        <td><%= post.post_title %></td>
        <td><%= post.post_content %></td>
        <td><%= post.username %></td>
        <td><%= post.topic_title %></td>
      </tr>
      <% }) %>
    </table>
  </body>
</html>
