    <div class="signbg">
      <div class="signup-box">
        <h4>Signup to GoldBubble for Exclusive Access</h4>

        <form action="/registered" method="post">
          <div class="container">
            <p>Please fill in this form to create an account</p>
            <hr />

            <label for="firstname"><b>First Name:</b></label>
            <input
              type="text"
              placeholder=""
              name="FirstName"
              id="firstname"
              required
            />
            <br />

            <label for="lastname"><b>Last Name:</b></label>
            <input
              type="text"
              placeholder=""
              name="LastName"
              id="lastname"
              required
            />
            <br />

            <label for="username"><b>Username:</b></label>
            <input
              type="text"
              placeholder=""
              name="username"
              id="username"
              required
            />
            <br />

            <label for="email"><b>Email Address:</b></label>
            <input
              type="text"
              placeholder=""
              name="email"
              id="email"
              pattern="^[a-zA-Z0-9._]+@gold.[a-zA-Z.]+$"
              required
            />
            <br />

            <label for="psw"><b>Password:</b></label>
            <input
              type="password"
              placeholder=""
              name="psw"
              id="psw"
              pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
              minlength="8"
              required
            /><p1>The password should include 8 characters, an upper case letter and a number</p1>
            <br /><br>

            <label for="psw-repeat"><b>Repeat Password:</b></label>
            <input
              type="password"
              placeholder=""
              name="psw-repeat"
              id="psw-repeat"
              required
            />
            <hr />

            <button
              type="submit"
              class="registerbtn"
              onclick="return ansValidation(event)"
            >
              Register
            </button>
            <script>
              //         FUNCTION TO MAKE SURE PASSWORDS MATCH
              function ansValidation(ev) {
                ev.preventDefault;
                var passValue = document.getElementById("psw").value;
                var confpassValue = document.getElementById("psw-repeat").value;
                if (passValue != confpassValue) {
                  window.alert("Passwords do not match!");
                  return false;
                } else {
                  return true;
                }
              }
            </script>
          </div>
          <div class="container signin">
            <p>Already have an account? <a href="/register">Sign in</a>.</p>
          </div>
        </form>
      </div>
    </div>
